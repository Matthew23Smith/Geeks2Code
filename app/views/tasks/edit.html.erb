
<header>
  <%= render "shared/task_nav" %>
  <h1 class="center">Edit My Task</h1>
</header>

<section>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="profile-card">
          <div class="profile">
            <%= image_tag current_user.avatar.url, class: "avatar" %>
            <p><%= current_user.name %></p>
          </div>
          <div class="counter">
            <div class="row">
              <p class="total"><%= current_user.tasks.count %><br> Tasks</p>

            </div>
          </div>
          <div class="button">
            <%= link_to "My Account", edit_user_registration_path, class: "btn btn-primary" %>
            <br>
            <%= link_to "New Task", new_task_path, class: "btn btn-success" %>
            <br>
            <p>Share you Task: <%= social_share_button_tag(@task.name, :image => "https://s3.amazonaws.com/profiletask/IMG_0016.JPG", desc: "Sharing My Task", via: "Task-It", :url => "https://my-task-tracker.herokuapp.com/", 'data-twitter-title' => 'Sharing My Task', 'data-facebook-title' => 'Sharing My Task') %></p>
          </div>
          <div class="social">
            <ul>
              <li><i class="fa fa-twitter"></i></li>
              <li><i class="fa fa-facebook"></i></li>
              <li><i class="fa fa-instagram"></i></li>
            </ul>
          </div>

        </div>

          <div class="latest-task">
            <div class="title">
              <% if current_user.tasks.last %>
                <p>LATEST TASK: &nbsp;&nbsp;&nbsp;&nbsp;<%= current_user.tasks.last.due_date.strftime("%B %d, %Y") %> </p>
              <% else %>
                <p>LATEST TASK: &nbsp;&nbsp;&nbsp;&nbsp; Nothing Here! </p>
              <% end %>
            </div>
            <div class="body">
              <% if current_user.tasks.last %>
                <h4><%= current_user.tasks.last.name %></h4>
              <% else %>
                <h4>No task</h4>
              <% end %>
            </div>
          </div>
        </div>

        <div class="col-md-9 task-list">
          <div class="form-container">
            <%= render 'form' %>
            <%= link_to "delete", [@task], :method  => :delete, class: 'btn btn-purple' %>
          </div>
        </div>

    </div>



  </div>
</section>
