<div class="container">
<div class="row">
  <%= form_for(@task) do |f| %>
    <% if @task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
        <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <div class="col-md-7">
    <div class="form-group">
      <%= f.label :name, "Task Description" %><br><br>
      <%= f.text_field :name, class: 'form-control', placeholder: "Task Description" %><br><br><br>
    </div>
    <div class="form-group">
      <%= f.label :status, "Check if the task has been completed:" %><br>
      <%= f.check_box :status%><br><br><br><br>
    </div>
    <div class="form-group">
        <%= f.label :due_date %> <br>
        <%= f.date_select(:due_date, :order => [:month, :day, :year], class: 'form-control') %>
    </div>
    <div class="form-group">
      <center><%= f.submit class: 'btn btn-primary' %></center>
    </div>
  </div>
  <% end %>
</div>
</div>
